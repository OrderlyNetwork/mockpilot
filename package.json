{
  "name": "mock-server",
  "displayName": "Mock Server",
  "description": "Visual Mock API Server for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mock-server",
          "title": "Mock Server",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "mock-server": [
        {
          "id": "mockExplorer",
          "name": "Mock APIs"
        }
      ]
    },
    "commands": [
      {
        "command": "mock-server.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "mock-server.refreshExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "mock-server.createMockApi",
        "title": "Create Mock API",
        "icon": "$(add)"
      },
      {
        "command": "mock-server.createMockDirectory",
        "title": "Create .mock Directory"
      },
      {
        "command": "mock-server.openMockApi",
        "title": "Open Mock API"
      },
      {
        "command": "mock-server.deleteMockApi",
        "title": "Delete Mock API",
        "icon": "$(trash)"
      },
      {
        "command": "mock-server.toggleServer",
        "title": "Mock Server: Toggle Server"
      },
      {
        "command": "mock-server.startServer",
        "title": "Mock Server: Start Server",
        "icon": "$(play)"
      },
      {
        "command": "mock-server.stopServer",
        "title": "Mock Server: Stop Server",
        "icon": "$(debug-stop)"
      },
      {
        "command": "mock-server.reloadServer",
        "title": "Mock Server: Reload Server",
        "icon": "$(refresh)"
      },
      {
        "command": "mock-server.getServerStatus",
        "title": "Mock Server: Get Server Status"
      },
      {
        "command": "mock-server.testMockApi",
        "title": "Mock Server: Test Mock API"
      }
    ],
    "configuration": {
      "title": "Mock Server",
      "properties": {
        "mockServer.port": {
          "type": "number",
          "default": 9527,
          "description": "Port for the mock server"
        },
        "mockServer.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the mock server when the extension is activated"
        },
        "mockServer.mockDirectory": {
          "type": "string",
          "default": ".mock",
          "description": "Directory containing mock API configurations"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "mock-server.refreshExplorer",
          "when": "view == mockExplorer",
          "group": "navigation"
        },
        {
          "command": "mock-server.createMockApi",
          "when": "view == mockExplorer",
          "group": "navigation"
        },
        {
          "command": "mock-server.startServer",
          "when": "view == mockExplorer",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "mock-server.openMockApi",
          "when": "view == mockExplorer && viewItem == mockFile",
          "group": "inline"
        },
        {
          "command": "mock-server.deleteMockApi",
          "when": "view == mockExplorer && viewItem == mockFile",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "mock-server.startServer"
        },
        {
          "command": "mock-server.stopServer"
        },
        {
          "command": "mock-server.reloadServer"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "compile-web": "pnpm run check-types && pnpm run lint && node esbuild.js && vite build",
    "watch": "node esbuild.js --watch",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch-web:vite": "vite build --watch",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package-web": "pnpm run check-types && pnpm run lint && node esbuild.js --production && vite build --mode production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@tailwindcss/vite": "^4.1.17",
    "@types/assert": "^1.5.11",
    "@types/koa": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.13",
    "@types/koa__cors": "^5.0.1",
    "@types/koa__router": "^12.0.5",
    "@types/mocha": "^10.0.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/vscode": "^1.106.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vscode/test-web": "^0.0.69",
    "assert": "^2.1.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "glob": "^11.0.2",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.8.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^14.0.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "lucide-react": "^0.454.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0",
    "yaml": "^2.8.1"
  }
}
