{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"types": ["react", "react-dom"],
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"noEmit": true,
		"baseUrl": "."
	},
	"include": [
		"src/web/**/*.ts",
		"src/web/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
